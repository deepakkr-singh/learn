# ============================================================================
# VARIABLES FOR USING EXISTING API GATEWAY
# ============================================================================

variable "existing_rest_api_name" {
  description = "Name of existing REST API"
  type        = string
  default     = ""
}

variable "existing_http_api_id" {
  description = "ID of existing HTTP API"
  type        = string
  default     = ""
}

variable "existing_api_key_id" {
  description = "ID of existing API key"
  type        = string
  default     = ""
}

# ----------------------------------------------------------------------------
# EXAMPLE terraform.tfvars
# ----------------------------------------------------------------------------
/*

# Example 1: Use Existing REST API
existing_rest_api_name = "my-api"

# Example 2: Use Existing HTTP API
existing_http_api_id = "abc123xyz"

# Example 3: Use Existing API Key
existing_api_key_id = "key123"

*/
